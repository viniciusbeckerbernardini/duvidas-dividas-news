    "/api/rating/delete/{isbn}": {
      "delete": {
        "tags": [
          "rating"
        ],
        "summary": "Delete a rating",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "isbn",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Rating deleted",
            "schema": {
