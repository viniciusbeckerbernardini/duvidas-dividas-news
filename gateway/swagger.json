{
  "openapi": "3.0.0",
  "info": {
    "title": "Dúvidas Dívidas News Api",
    "version": "1.0.0",
    "description": "API para microserviços de autenticação, pedidos, avaliação, catálogo e carrinho"
  },
  "servers": [
    {
      "url": "http://localhost:9007"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/user/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Realiza o login de um usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "vbkmma@gmail.com",
                  "password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY3MWU3NDFmY2I3OWExZWY5MWU5ZDI5MiIsImlhdCI6MTczMzAwNTU4NiwiZXhwIjoxNzMzMDkyMDQ2fQ.8Iwd7q0Bwvs2dfte20nFtCLlFE0Srr4XBkeEmTt5a_U",
                    "userId": "671e741fcb79a1ef91e9d292"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro crítico"
          }
        }
      }
    },
    "/api/user/me": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Obtém as informações do usuário logado",
        "responses": {
          "200": {
            "description": "Informações do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "cpf": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "name": "Vini",
                        "email": "vbkmma@gmail.com",
                        "cpf": "4114107940"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro crítico"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/api/user/create-user": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "telephone": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Testexxx",
                  "email": "vbkmma2@gmail.com",
                  "password": "12345",
                  "telephone": "1234567896",
                  "cpf": "4114107942"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    },
                    "_id": {
                      "type": "string"
                    },
                    "dateCreated": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "__v": {
                      "type": "integer"
                    }
                  },
                  "example": {
                    "name": "Testexxx",
                    "email": "vbkmma2@gmail.com",
                    "password": "$2a$10$H/YfBQ6bbKvmw75NdBxkyOKdzKM0beXZqXox4lOi7.5NrQD0DF1wq",
                    "cpf": "4114107942",
                    "_id": "674b926036d9f77e5496ae08",
                    "dateCreated": "2024-11-30T22:32:00.659Z",
                    "__v": 0
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro crítico"
          }
        }
      }
    },
    "/api/carts/get": {
      "get": {
        "tags": [
          "cart"
        ],
        "summary": "Retorna o carrinho do usuário",
        "operationId": "getCart",
        "responses": {
          "200": {
            "description": "Carrinho recuperado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "cart": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string"
                        },
                        "products": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "productId": {
                                "type": "string"
                              },
                              "quantity": {
                                "type": "integer"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/carts/add-product": {
      "post": {
        "tags": [
          "cart"
        ],
        "summary": "Adiciona um produto ao carrinho",
        "operationId": "addProductToCart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "string"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                },
                "required": ["productId", "quantity"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto adicionado ao carrinho com sucesso"
          },
          "400": {
            "description": "Erro na solicitação"
          }
        }
      }
    },
    "/api/carts/remove-product": {
      "delete": {
        "tags": [
          "cart"
        ],
        "summary": "Remove um produto do carrinho",
        "operationId": "removeProductFromCart",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produto removido do carrinho com sucesso"
          },
          "400": {
            "description": "Erro na solicitação"
          }
        }
      }
    },
    "/api/catalog/list": {
      "get": {
        "tags": [
          "catalog"
        ],
        "summary": "List all catalog items",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of catalog items",
            "schema": {
              "type": "object",
              "properties": {
                "catalog": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Book"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/catalog/find/{isbn}": {
      "get": {
        "tags": [
          "catalog"
        ],
        "summary": "Find a book by ISBN",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "isbn",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Book found",
            "schema": {
              "$ref": "#/definitions/Book"
            }
          },
          "404": {
            "description": "Book not found"
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/orders/list": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "List all orders",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of orders",
            "schema": {
              "type": "object",
              "properties": {
                "orders": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Order"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/orders/find/{orderId}": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "Find an order by ID",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Order found",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/orders/create": {
      "post": {
        "tags": [
          "orders"
        ],
        "summary": "Create a new order",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OrderRequest"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Order created",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/orders/confirm-delivery": {
      "put": {
        "tags": [
          "orders"
        ],
        "summary": "Confirm order delivery",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OrderId"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Delivery confirmed",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/orders/cancel-order": {
      "put": {
        "tags": [
          "orders"
        ],
        "summary": "Cancel an order",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/OrderId"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Order canceled",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/rating/list/{isbn}": {
      "get": {
        "tags": [
          "rating"
        ],
        "summary": "List ratings for a book",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "isbn",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of ratings",
            "schema": {
              "type": "object",
              "properties": {
                "ratings": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Rating"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/rating/find/{isbn}": {
      "get": {
        "tags": [
          "rating"
        ],
        "summary": "Find a rating for a book",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "isbn",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Rating found",
            "schema": {
              "$ref": "#/definitions/Rating"
            }
          },
          "404": {
            "description": "Rating not found"
          },
          "500": {
            "description": "Critical error"
          }
        }
      }
    },
    "/api/rating/create": {
      "post": {
        "tags": [
          "rating"
        ],
        "summary": "Create a new rating",
        "security": [
          {
            "BearerToken": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RatingRequest"
            }
          }
        ],
