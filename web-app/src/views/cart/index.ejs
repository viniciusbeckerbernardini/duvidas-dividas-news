<%- include('../templates/dashboard/header',{title:'Carrinho' })%>
<%- include('../templates/dashboard/navbar')%>
<div class="container mt-5">
    <h1 class="title">
        Carrinho
    </h1>
</div>
<div class="container mt-5 content-box">
    <div class="table-responsive">
        <table class="table text-center">
            <thead>
            <tr>
                <th scope="col">Capa</th>
                <th scope="col">Título</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Preço</th>
                <th scope="col">Ações</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody id="cart">
            </tbody>
        </table>
    </div>
</div>
<div class="container mt-5 content-box">
    <div class="d-flex justify-content-end">
        <div class="mr-4 d-flex align-items-center">
            <input type="text" id="cart-cep" class="form-control" placeholder="cep">
            <input type="text" id="house-number" class="form-control ml-2 mr-2" placeholder="número residência">
        </div>
        <div class="ml-4">
            <button class="btn btn-success" onclick="getAdress()">Buscar endereço</button>
        </div>
    </div>
</div>
<div class="container mt-5 content-box">
    <div class="d-flex justify-content-end">
        <div class="mr-4 d-flex align-items-center">
            <p class="m-0 p-0">
                <strong>
                    Total: R$ <span id="total-price"></span>
                </strong>
            </p>
        </div>
        <div class="ml-4">
            <button class="btn btn-success" onclick="createOrder()">Comprar</button>
        </div>

    </div>
</div>


<script src="/js/cart.js"></script>
<script src="/js/product.js"></script>
<%- include('../templates/dashboard/footer') %>
