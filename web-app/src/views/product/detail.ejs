<%- include('../templates/dashboard/header',{title:'Dúvidas Dívidas News - detalhe do produto'})%>
<%- include('../templates/dashboard/navbar')%>
<div class="container mt-5">
    <div class="title">
        <h1 class="title" id="product-title">
            Detalhes do produto
        </h1>
    </div>
    <div class="mt-4">
        <div id="product-detail" class="container">
            <div class="row">
                <div class="col col-6">
                    <div class="row">
                        <div class="col col-12">
                            <div id="product-images">
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0565/4039/7655/files/book_cover_2.png" alt="First slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0565/4039/7655/files/book_cover_1.png" alt="Second slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="https://cdn.shopify.com/s/files/1/0565/4039/7655/files/book_cover_3.png" alt="Third slide">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col col-12 mt-4">
                            <div id="product-description">
                                descrição
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col col-6">
                    <div class="row">
                        <div class="col col-12">
                            <div id="product-price">
                                0000
                            </div>
                        </div>
                        <div class="col col-12">
                            <div id="add-to-cart">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <button onclick="addToCart()" class="btn btn-primary">
                                            ADICIONAR AO CARRINHO
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col col-12">
                            <div id="buy-product">
                                <div class="row">
                                    <div class="col-12 mt-2">
                                        <button onclick="addAndGoToCart()" class="btn btn-success">
                                            COMPRAR AGORA &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa-solid fa-cart-shopping fa-beat-fade"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col col-12">
                            <div id="calculate-delivery">
                                <div class="row">
                                    <div class="col-12 mt-4">
                                        <p>Calcular frete:</p>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <input type="text" id="input-cep" placeholder="ex: 91140400" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-primary" onclick="calculateFreight()">
                                            <i class="fa-solid fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <hr>
                                    <div id="freight-value" style="display: none">
                                        <div class="row">
                                            <div class="col-4">
                                                Frete grátis
                                            </div>
                                            <div class="col-8">
                                                4 a 6 dias úteis
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="title text-center">
            <h3 class="title" id="product-title">
                Avaliações
            </h3>
        </div>
        <div id="my-rating-box" class="mt-4 mb-4">
            <div class="row d-flex justify-content-center">
                <div class="col-5 mr-4 content-box">
                    <p><strong>Enviar/Atualizar Avaliação</strong></p>
                    <input type="number" id="rating-box" min="1" max="5" class="form-control" placeholder="Sua avaliação (1 a 5)">
                    <textarea id="comment-box" class="form-control mt-2" cols="50" rows="10" placeholder="Seu comentário"></textarea>
                    <button onclick="addMyRating()" class="btn btn-success mt-2">
                        Enviar comentário
                    </button>
                </div>
                <div class="col-5 content-box">
                    <p><strong>Sua avaliação</strong></p>
                    <p id="my-rating">Nota: </p>
                    <textarea id="my-comment" cols="50" disabled rows="10" class="form-control mt-2"></textarea>
                    <button class="btn btn-danger mt-2">
                        Deletar avaliação
                    </button>
                </div>
            </div>
        </div>
        <div id="ratings" class="mt-4 mb-4">
            <div class="row" id="products-ratings">
                <div class="rating">
                    <H2>Sem avaliações ainda :(</H2>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="title text-center">
            <h3 class="title" id="product-title">
                Produtos relacionados
            </h3>
        </div>
        <div id="products">
            <div class="row" id="products-catalog">
            </div>
        </div>
    </div>
</div>
<script src="/js/product.js"></script>
<script src="/js/catalog.js"></script>
<script src="/js/rating.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        $('.carousel').carousel({
            interval: 2000
        })
        loadProduct()
        if(localStorage.getItem('isLogged') ==='true'){
            loadMyRating()
        }
    });


</script>
<%- include('../templates/dashboard/footer') %>